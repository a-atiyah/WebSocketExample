<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_msg_chat_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textSize="19sp"
        android:layout_marginVertical="@dimen/xsmall_margin_4dp"
        android:layout_marginEnd="@dimen/med_margin_16dp"
        android:padding="@dimen/small_padding_8dp"
        android:background="@drawable/custom_msg_receiver"/>

    <TextView
        android:id="@+id/tv_name_chat_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_msg_chat_item"
        android:textSize="16sp"
        android:textColor="@color/light_gray"/>

    <ImageView
        android:id="@+id/iv_img_chat_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginVertical="@dimen/xsmall_margin_4dp"
        android:padding="@dimen/small_padding_8dp"
        android:background="@drawable/custom_msg_receiver"
        android:src="@drawable/ic_launcher_background"
        android:contentDescription="@string/image"
        android:visibility="gone"/>
</RelativeLayout>